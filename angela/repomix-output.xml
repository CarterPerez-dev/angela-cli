                result["has_dependencies"] = True
                result["dependency_file"] = str(package_json.relative_to(project_root))
                
                # Determine package manager
                yarn_lock = project_root / "yarn.lock"
                package_lock = project_root / "package-lock.json"
                
                if yarn_lock.exists():
